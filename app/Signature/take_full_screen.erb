<div class="container-fluid">

  <%= render partial: '/partials/page_head', locals: {back: '.', title: 'Signature.takeFullScreen'} %>


  <button id="takeFullScreen" class="btn btn-primary btn-block">Call method takeFullScreen</button>

  <div class="result">
    <div class="success alert alert-success hidden" role="alert"></div>
    <div class="error alert alert-danger hidden" role="alert"></div>
  </div>
</div>

<img id="image" src="" class="img-responsive">

<script>

    $("#takeFullScreen").on("click", function () {
        $.get("<%= url_for :action => :do_take_full_screen %>")
    })

</script>