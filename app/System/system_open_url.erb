<div class="container-fluid">

  <%= render :partial => "/partials/page_head", :locals => {:back => '.', :title => 'System.openUrl'} %>

  <form method="POST" action="<%= url_for :action => :do_open_url %>">

    <div class="form-group">
      <label for="value">Url</label>
      <input type="text" id="value" name="value" class="form-control"/>
      <ul>
        <li><p class="help-block">tel:&lt;phone number&gt; </p></li>
        <li><p class="help-block">sms:&lt;phone number&gt; </p></li>
        <li><p class="help-block">market://details?id=&lt;package name on Google Store&gt; </p></li>
        <li><p class="help-block">itms://itunes.apple.com/&lt;url to item on Apple Store&gt</p></li>
      </ul>
    </div>

    <button type="submit" class="btn btn-primary btn-block">Call method
      openUrl
    </button>
  </form>

  <div class="result">
    <div class="alert <%= result_css_class %>" role="alert"><%= @result %></div>
  </div>
</div>


</div>