<div class="container-fluid">

  <%= render partial: '/partials/page_head', locals: {back: '.', title: 'Config.configPath'} %>


  <form method="POST" action="<%= url_for :action => :do_set_property %>">
    <fieldset>
      <legend>Set property</legend>
      <div class="form-group">
        <input type="text" id="name" name="name" class="form-control" placeholder="Enter name of property"/>
      </div>

      <div class="form-group">
        <input type="text" id="value" name="value" class="form-control" placeholder="Enter value"/>
      </div>

      <button type="submit" class="btn btn-primary btn-block">Set property</button>
    </fieldset>
  </form>

  <br>
  <br>

  <form method="POST" action="<%= url_for :action => :do_get_property %>">
    <fieldset>
      <legend>Get property</legend>
      <div class="form-group">
        <input type="text" id="name" name="name" class="form-control" placeholder="Enter name of property"/>
      </div>

      <button type="submit" class="btn btn-primary btn-block">Get property</button>
    </fieldset>
  </form>

  <div class="result">
    <div class="alert <%= result_css_class %>" role="alert"><%= @result %></div>
  </div>
</div>

</div>