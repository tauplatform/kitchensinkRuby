<div class="container-fluid">

  <%= render partial: '/partials/page_head', locals: {back: '.', title: 'KeyCapture.captureTrigger'} %>


  <div class="alert alert-info" role="alert">Try to press the hardware keys like "Volume Up", "Volume Down" etc.
  </div>

  <button id="captureKey" class="btn btn-primary btn-block">Call method captureKey</button>
  <button id="stopCaptureKey" class="btn btn-primary btn-block">Stop key capturing</button>

  <div class="result">
    <div id="result" class="alert alert-success" role="alert"></div>
    <div id="error" class="alert alert-danger" role="alert"></div>
  </div>
</div>


<script>

    $("#captureKey").on("click", function () {
        $.get("<%= url_for :action => :do_capture_trigger %>")
    })

    $("#stopCaptureKey").on("click", function () {
        $.get("<%= url_for :action => :do_stop_capture_trigger %>")
    })

</script>