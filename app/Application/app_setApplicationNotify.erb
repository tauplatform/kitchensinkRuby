<div class="container-fluid">

  <%= render :partial => "/partials/page_head", :locals => {:back => ".", :title => "Application.setApplicationNotify"} %>

  <div class="alert alert-info" role="alert">Press the button below and minimize and restore the application. Look at
    result area for notifications
  </div>

  <form method="POST" action="<%= url_for :action => :setApplicationNotify %>">

    <button type="submit" class="btn btn-primary btn-block">Call method setApplicationNotify</button>
  </form>

  <div class="result-area">
    <div class="alert <%= result_css_class %>" role="alert"><%= @result %></div>
  </div>

</div>