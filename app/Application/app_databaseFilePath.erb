<div class="container-fluid">

  <%= render :partial => "/partials/page_head", :locals => {:back => ".", :title => "Application databaseFilePath"} %>

  <form>
    <div class="form-group">
      <input type="text" id="value" class="form-control" placeholder="input value">
    </div>

    <button type="submit" id="doAction" class="btn btn-primary btn-block">Call method
      databaseFilePath
    </button>
  </form>

  <form method="POST" action="<%= url_for :action => :setDatabaseFilePath  %>">

    <div class="form-group">
        <input type="text" id="databaseFilePath" class="form-control" />
    </div>

    <button type="submit" class="btn btn-success btn-block">Call method
      databaseFilePath</button>
  </form>



  <div class="result-area">
    <div id="result" class="alert alert-success <%= 'hidden' if :success? %>" role="alert"></div>
    <div id="error" class="alert alert-danger <%= 'hidden' if :error? %>" role="alert"></div>
  </div>


</div>