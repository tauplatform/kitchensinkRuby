<div class="container-fluid">

  <%= render :partial => "/partials/page_head", :locals => {:back => ".", :title => "Application.minimize"} %>

  <div class="alert alert-info" role="alert">Press the button below and the application will be minimized
    immediately and will be restored in a couple of seconds
  </div>

  <form method="POST" action="<%= url_for :action => :do_minimize %>">

    <button type="submit" class="btn btn-primary btn-block">Call method
      minimize() and restore()
    </button>
  </form>

  <div class="result">
    <div class="alert <%= result_css_class %>" role="alert"><%= @result %></div>
  </div>

</div>