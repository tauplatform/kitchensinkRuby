<div class="container-fluid">

  <%= render :partial => "/partials/page_head", :locals => {:back => "../", :title => "Camera"} %>

  <div class="row">
    <div class="list-group">
      <a href="<%= url_for :action => :choose_picture %>" class="list-group-item">
        <span class="glyphicon glyphicon-chevron-right pull-right" aria-hidden="true"></span>
        Camera.choosePicture</a>
      <a href="<%= url_for :action => :enumerate %>" class="list-group-item">
        <span class="glyphicon glyphicon-chevron-right pull-right" aria-hidden="true"></span>
        Camera.enumerate</a>
      <a href="<%= url_for :action => :get_all_properties %>" class="list-group-item">
        <span class="glyphicon glyphicon-chevron-right pull-right" aria-hidden="true"></span>
        Camera.getAllProperties</a>
      <a href="<%= url_for :action => :show_hide_preview %>" class="list-group-item">
        <span class="glyphicon glyphicon-chevron-right pull-right" aria-hidden="true"></span>
        Camera.showPreview/hidePreview</a>
      <a href="<%= url_for :action => :take_picture %>" class="list-group-item">
        <span class="glyphicon glyphicon-chevron-right pull-right" aria-hidden="true"></span>
        Camera.takePicture</a>
    </div>
  </div>

</div>